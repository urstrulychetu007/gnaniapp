<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".WelcomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#05c"
            android:scaleType="fitXY"
            android:alpha="0.4"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="we're proud to be"
            android:textAllCaps="true"
            android:textStyle="bold"
           android:layout_marginTop="80dp"
            android:textColor="#fff"
            android:id="@+id/Heading"
            android:textSize="24dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Heading"

            android:text="One of India's Top 50 Emerging and"
            android:textColor="#fff"
            android:textSize="12dp"
            android:id="@+id/d1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/d1"
            android:text="Innovative software companies in 2021"
            android:textColor="@color/white"
            android:textSize="12dp"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher_foreground"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/ll"
        android:layout_below="@id/rl"
        android:orientation="horizontal"
        >

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="35dp"
        android:scaleType="centerCrop"
        android:background="@color/black"
        android:id="@+id/eh"
        android:src="@drawable/eng"
        />
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="35dp"
            android:scaleType="fitXY"
            android:background="@color/black"
            android:id="@+id/he"
            android:src="@drawable/hin"
            />
    </LinearLayout>



</RelativeLayout>